            }
        };

        // ëª¨ë‹¬ ê´€ë ¨ í•¨ìˆ˜ë“¤ì„ ì „ì—­ìœ¼ë¡œ ì •ì˜
        window.openTestModal = function() {
            console.log('Opening test modal...'); // ë””ë²„ê¹…ìš©
            const modal = document.getElementById('testModal');
            if (modal) {
                modal.classList.add('active');
                document.body.style.overflow = 'hidden';
                resetModalTest();
            } else {
                console.error('Modal not found!');
            }
        };

        window.closeTestModal = function() {
            console.log('Closing test modal...'); // ë””ë²„ê¹…ìš©
            const modal = document.getElementById('testModal');
            if (modal) {
                modal.classList.remove('active');
                document.body.style.overflow = 'auto';
            }
        };

        window.resetModalTest = function() {
            modalCurrentQuestion = 0;
            modalAnswers = [];
            
            const resultScreen = document.getElementById('modalResultScreen');
            const navigation = document.getElementById('modalNavigation');
            
            if (resultScreen) resultScreen.classList.remove('active');
            if (navigation) navigation.style.display = 'flex';
            
            // Reset all question cards
            document.querySelectorAll('#testModal .question-card').forEach(card => {
                card.style.display = 'block';
                card.classList.remove('active');
            });
            
            // Reset all options
            document.querySelectorAll('#testModal .option').forEach(opt => {
                opt.classList.remove('selected');
            });
            
            showModalQuestion(0);
        };

        function updateModalProgress() {
            const progress = ((modalCurrentQuestion + 1) / modalTotalQuestions) * 100;
            const progressFill = document.getElementById('modalProgressFill');
            if (progressFill) {
                progressFill.style.width = progress + '%';
            }
        }

        function showModalQuestion(index) {
            document.querySelectorAll('#testModal .question-card').forEach(card => {
                card.classList.remove('active');
            });
            
            const targetCard = document.querySelector(`#testModal [data-question="${index}"]`);
            if (targetCard) {
                targetCard.classList.add('active');
            }
            
            updateModalProgress();
            updateModalNavigation();
        }

        function updateModalNavigation() {
            const prevBtn = document.getElementById('modalPrevBtn');
            const nextBtn = document.getElementById('modalNextBtn');
            
            if (prevBtn) {
                prevBtn.disabled = modalCurrentQuestion === 0;
            }
            
            if (nextBtn) {
                if (modalCurrentQuestion === modalTotalQuestions - 1) {
                    nextBtn.textContent = 'ê²°ê³¼ ë³´ê¸°';
                    nextBtn.disabled = modalAnswers[modalCurrentQuestion] === undefined;
                } else {
                    nextBtn.textContent = 'ë‹¤ìŒ';
                    nextBtn.disabled = modalAnswers[modalCurrentQuestion] === undefined;
                }
            }
        }

        function selectModalOption(questionIndex, score, element) {
            modalAnswers[questionIndex] = score;
            
            const currentCard = document.querySelector(`#testModal [data-question="${questionIndex}"]`);
            if (currentCard) {
                currentCard.querySelectorAll('.option').forEach(opt => {
                    opt.classList.remove('selected');
                });
            }
            
            element.classList.add('selected');
            updateModalNavigation();
        }

        window.nextModalQuestion = function() {
            if (modalCurrentQuestion < modalTotalQuestions - 1) {
                modalCurrentQuestion++;
                showModalQuestion(modalCurrentQuestion);
            } else {
                showModalResult();
            }
        };

        window.prevModalQuestion = function() {
            if (modalCurrentQuestion > 0) {
                modalCurrentQuestion--;
                showModalQuestion(modalCurrentQuestion);
            }
        };

        function calculateModalResult() {
            const totalScore = modalAnswers.reduce((sum, score) => sum + (score || 0), 0);
            let resultType;
            
            if (totalScore <= 4) {
                resultType = 'A';
            } else if (totalScore <= 8) {
                resultType = 'B';
            } else if (totalScore <= 13) {
                resultType = 'C';
            } else {
                resultType = 'D';
            }
            
            return { totalScore, resultType };
        }

        function showModalResult() {
            const { totalScore, resultType } = calculateModalResult();
            const result = modalResultTypes[resultType];
            
            const navigation = document.getElementById('modalNavigation');
            if (navigation) navigation.style.display = 'none';
            
            document.querySelectorAll('#testModal .question-card').forEach(card => {
                card.style.display = 'none';
            });
            
            const scoreElement = document.getElementById('modalResultScore');
            const typeElement = document.getElementById('modalResultType');
            const descElement = document.getElementById('modalResultDescription');
            const resultScreen = document.getElementById('modalResultScreen');
            const progressFill = document.getElementById('modalProgressFill');
            
            if (scoreElement) scoreElement.textContent = `${totalScore}ì `;
            if (typeElement) typeElement.textContent = `${result.emoji} ${result.name}`;
            
            if (descElement) {
                const descriptionHtml = `
                    <h3>${result.description}</h3>
                    <p>${result.details}</p>
                    <p><strong>${result.recommendation}</strong></p>
                `;
                descElement.innerHTML = descriptionHtml;
            }
            
            if (resultScreen) resultScreen.classList.add('active');
            if (progressFill) progressFill.style.width = '100%';
        }

        window.shareModalResult = function() {
            const { totalScore, resultType } = calculateModalResult();
            const result = modalResultTypes[resultType];
            
            const shareText = `ğŸ¯ ë‚˜ì˜ ë§ˆì¼€íŒ… ì ìˆ˜: ${totalScore}ì \n${result.emoji} ${result.name}\n\n${result.description}\n\nTWDD ë§ˆì¼€íŒ… ì§„ë‹¨ í…ŒìŠ¤íŠ¸ ê²°ê³¼ì…ë‹ˆë‹¤!`;
            
            if (navigator.share) {
                navigator.share({
                    title: 'ë§ˆì¼€íŒ… ì§„ë‹¨ í…ŒìŠ¤íŠ¸ ê²°ê³¼',
                    text: shareText,
                    url: window.location.href
                });
            } else {
                navigator.clipboard.writeText(shareText).then(() => {
                    showModalToast('ê²°ê³¼ê°€ ë³µì‚¬ë˜ì—ˆìŠµë‹ˆë‹¤!');
                });
            }
        };

        function showModalToast(message) {
            const toast = document.getElementById('modalToast');
            if (toast) {
                toast.textContent = message;
                toast.classList.add('show');
                
                setTimeout(() => {
                    toast.classList.remove('show');
                }, 3000);
            }
        }

        window.restartModalTest = function() {
            resetModalTest();
        };

        // Event listeners for modal options
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('#testModal .option').forEach(option => {
                option.addEventListener('click', function() {
                    const questionIndex = parseInt(this.closest('.question-card').dataset.question);
                    const score = parseInt(this.dataset.score);
                    selectModalOption(questionIndex, score, this);
                });
            });

            // Close modal when clicking outside
            document.getElementById('testModal').addEventListener('click', function(e) {
                if (e.target === this) {
                    closeTestModal();
                }
            });
        });
    </script>
</body>
</html>
